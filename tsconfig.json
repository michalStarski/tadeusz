{
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "noUnusedLocals": true,

  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
